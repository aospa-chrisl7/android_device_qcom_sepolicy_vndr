# early Video Service
type vendor_earlyVideo, domain;
type vendor_earlyVideo_exec, exec_type, file_type, vendor_file_type;

init_daemon_domain(vendor_earlyVideo)
allow vendor_earlyVideo graphics_device:chr_file rw_file_perms;
allow vendor_earlyVideo video_device:chr_file rw_file_perms;
allow vendor_earlyVideo gpu_device:chr_file rw_file_perms;
allow vendor_earlyVideo sysfs_power:file r_file_perms;
allow vendor_earlyVideo kmsg_device:chr_file rw_file_perms;
allow vendor_earlyVideo vendor_early_services:dir rw_dir_perms;
allow vendor_earlyVideo vendor_early_services:file rw_file_perms;
userdebug_or_eng(`
      allow vendor_earlyVideo vendor_sysfs_kpi:file w_file_perms;
')
allow vendor_earlyVideo self:capability { chown setgid setuid sys_admin };
allow vendor_earlyVideo dmabuf_system_heap_device:chr_file r_file_perms;
allow vendor_earlyVideo vendor_dmabuf_system_heap_device:chr_file r_file_perms;
