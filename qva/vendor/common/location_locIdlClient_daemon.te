# qva/vendor/common/location_locIdlClient_daemon.te - sepolicy rules for qti value added location module locIdlClient_daemon

type vendor_location_locIdlClient_daemon, domain;
type vendor_location_locIdlClient_daemon_exec, exec_type, vendor_file_type, file_type;

# allows loc_launcher to launch locIdlClient_daemon
domain_auto_trans(vendor_location, vendor_location_locIdlClient_daemon_exec, vendor_location_locIdlClient_daemon)
allow vendor_location_locIdlClient_daemon vendor_location:fd use;

# allows read/write file access in /dev/smcinvoke
allow vendor_location_locIdlClient_daemon tee_device:chr_file rw_file_perms;

# allows file access in /data/vendor/location
allow vendor_location_locIdlClient_daemon vendor_location_data_file:dir create_dir_perms;
allow vendor_location_locIdlClient_daemon vendor_location_data_file:file create_file_perms;

# allows socket access in /dev/socket/location
allow vendor_location_locIdlClient_daemon vendor_location_socket:lnk_file r_file_perms;
allow vendor_location_locIdlClient_daemon vendor_location_socket:sock_file create_file_perms;
allow vendor_location_locIdlClient_daemon vendor_location_socket:dir rw_dir_perms;
allow vendor_location_locIdlClient_daemon vendor_location:unix_dgram_socket { read write sendto };

# allow socket communication with gnss hal
allow vendor_location_locIdlClient_daemon vendor_hal_gnss_qti:unix_dgram_socket sendto;

get_prop(vendor_location_locIdlClient_daemon, hwservicemanager_prop)
binder_call(vendor_location_locIdlClient_daemon, system_server)


# allows shell execute locIdlClient_daemon in userdebug mode.
userdebug_or_eng(`
  allow shell vendor_location_locIdlClient_daemon_exec:file rx_file_perms;
')

# Enable standard network access
net_domain(vendor_location_locIdlClient_daemon)

# IPC Router
allow vendor_location_locIdlClient_daemon self:qipcrtr_socket create_socket_perms_no_ioctl;
allow vendor_location_locIdlClient_daemon property_socket:sock_file write;
allow vendor_location_locIdlClient_daemon vendor_location:unix_stream_socket { read write };
crash_dump_fallback(vendor_location_locIdlClient_daemon)

# someip
allow vendor_location_locIdlClient_daemon vendor_someip_data_file:dir { add_name search write remove_name };
allow vendor_location_locIdlClient_daemon vendor_someip_data_file:file { create lock open write };
allow vendor_location_locIdlClient_daemon vendor_someip_data_file:sock_file { create setattr write unlink };

