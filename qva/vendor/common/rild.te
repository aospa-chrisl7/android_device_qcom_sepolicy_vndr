set_prop(rild, vendor_xlat_prop)

allow rild self:capability {
    net_raw
    net_admin
};
allow rild self:capability2 {
    block_suspend
};
allow rild rild:{
    netlink_socket
    netlink_route_socket
}create_socket_perms_no_ioctl;

allow rild self:netlink_route_socket { create bind write nlmsg_read read nlmsg_readpriv nlmsg_write };
allow rild vendor_automs_vndr_data_file:dir create_dir_perms;
allow rild vendor_automs_vndr_data_file:file create_file_perms;
allow rild vendor_someip_data_file:dir { search write add_name remove_name };
allow rild vendor_someip_data_file:file { create write open lock setattr };
allow rild vendor_someip_data_file:sock_file { create setattr write unlink };
allow rild vendor_location_locIdlClient_daemon:unix_stream_socket connectto;
