userdebug_or_eng(`
  diag_use(hal_audio)
  allow hal_audio_default devpts:chr_file rw_file_perms;
')

#Split A2dp specific
binder_call(hal_audio,bluetooth)

#to read bt props
get_prop(hal_audio, vendor_bluetooth_prop)

# Allow audio HAL to get updates from health hal
hal_client_domain(hal_audio_default, hal_health)

#Allow callbacks into QC2 audio service
hal_client_domain(hal_audio_default, hal_codec2)

#Allow audio PAL/HAL to talk with SOCPeripherals API's
unix_socket_connect(hal_audio_default, vendor_ssgtzd, vendor_ssgtzd)

# Allow audio HAL to communicate with Audio HAL Plugin Service
allow hal_audio_default vendor_audio_hal_plugin_service_service:service_manager find;

# Allow audio HAL to communicate with ACDB Loader Service
allow hal_audio_default vendor_acdb_loader_service_service:service_manager find;

binder_call(hal_audio_default,vendor_acdb_loader_service)
binder_call(hal_audio_default,vendor_audio_hal_plugin_service)

# Allow audio HAL to communicate with car power policy service
allow hal_audio_default carpowerpolicyd_service:service_manager find;
binder_call(hal_audio_default, carpowerpolicyd)
binder_call(carpowerpolicyd, hal_audio_default)

# Allow audio hal to communicate with msm_lsm char dev
allow hal_audio_default vendor_msm_lsm_cdev_device:chr_file rw_file_perms;
